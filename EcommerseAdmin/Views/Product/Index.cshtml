@model ProductCatalog

@using (Html.BeginForm("SearchProductByName", "Product", FormMethod.Post))
{
    <div class="searcher row col-sm-6">
        <div class="input-group col-lg-6">
            <input name="name" type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="buttonClick()">Go!</button>
            </span>
        </div><!-- /input-group -->
    </div>
}



